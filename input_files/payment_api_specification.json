{
  "payment_portal_api": {
    "version": "2.0",
    "base_url": "https://api.paymentportal.com/v2",
    "endpoints": {
      "initiate_payment": {
        "method": "POST",
        "url": "/payments/initiate",
        "description": "Initialize a new payment session",
        "parameters": {
          "order_id": "string (required)",
          "amount": "decimal (required)",
          "currency": "string (required, ISO 4217)",
          "customer_id": "string (required)",
          "return_url": "string (required)",
          "cancel_url": "string (required)"
        },
        "responses": {
          "200": "Payment session created successfully",
          "400": "Invalid request parameters",
          "401": "Authentication failed",
          "422": "Business rule violation (amount limits, etc.)",
          "500": "Internal server error"
        }
      },
      "process_payment": {
        "method": "POST",
        "url": "/payments/process",
        "description": "Process payment with provided details",
        "parameters": {
          "session_id": "string (required)",
          "payment_method": "object (required)",
          "billing_address": "object (required)",
          "save_payment_method": "boolean (optional)"
        },
        "responses": {
          "200": "Payment processed successfully",
          "402": "Payment declined",
          "409": "Duplicate transaction",
          "429": "Rate limit exceeded",
          "500": "Payment gateway error"
        }
      },
      "verify_payment": {
        "method": "GET",
        "url": "/payments/{payment_id}/verify",
        "description": "Verify payment status and details",
        "parameters": {
          "payment_id": "string (required, path parameter)"
        },
        "responses": {
          "200": "Payment verification successful",
          "404": "Payment not found",
          "410": "Payment expired"
        }
      },
      "refund_payment": {
        "method": "POST",
        "url": "/payments/{payment_id}/refund",
        "description": "Process full or partial refund",
        "parameters": {
          "payment_id": "string (required, path parameter)",
          "amount": "decimal (optional, defaults to full amount)",
          "reason": "string (required)"
        },
        "responses": {
          "200": "Refund processed successfully",
          "400": "Invalid refund amount",
          "404": "Payment not found",
          "409": "Refund not allowed (already refunded, etc.)"
        }
      }
    },
    "authentication": {
      "type": "Bearer Token",
      "header": "Authorization: Bearer {api_key}"
    },
    "rate_limits": {
      "payment_initiation": "100 requests per minute",
      "payment_processing": "50 requests per minute",
      "verification": "200 requests per minute"
    }
  }
}